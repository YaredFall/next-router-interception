{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2019",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,

        "lib": ["dom", "dom.iterable", "es2019"],
        "module": "node16",
        "moduleResolution": "node16",
        "jsx": "react-jsx",
        "plugins": [{ "name": "next" }],

        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
    },
    "include": ["src"]
}
